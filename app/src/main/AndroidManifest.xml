<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shojishunsuke.musicpro">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.shojishunsuke.musicpro.actvity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shojishunsuke.musicpro.actvity.AlbumDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shojishunsuke.musicpro.actvity.ArtistDetailActivity"
            android:screenOrientation="portrait" />

        <service android:name="com.shojishunsuke.musicpro.Service.TrackService" />

        <activity
            android:name="com.shojishunsuke.musicpro.actvity.TrackDetailActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>